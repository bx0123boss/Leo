@using PuntoVentaWeb.Services
@using PuntoVentaWeb.Models
@inject CotizacionService CotizacionService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@nombreNegocio</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    @* Agregamos 'd-flex' y 'h-100' para asegurar que ocupe todo el alto *@
    <nav class="flex-column d-flex h-100">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cotizacion">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Nueva Cotización
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clientes">
                <span class="oi oi-people" aria-hidden="true"></span> Nuevo Cliente
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="historial">
                <span class="oi oi-clock" aria-hidden="true"></span> Historial
            </NavLink>
        </div>

        @* ESPACIADOR OPCIONAL (si mt-auto no basta por temas de CSS padre) *@
        @* <div class="flex-grow-1"></div> *@

        @* BOTÓN DE CONFIGURACIÓN *@
        @* 'mt-auto' lo empuja al fondo. 'mb-3' le da un poco de aire abajo *@
        <div class="nav-item px-3 mt-auto mb-3">
            <NavLink class="nav-link" href="configuracion">
                <span class="oi oi-cog" aria-hidden="true"></span> Configuración
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string nombreNegocio = "Cargando...";
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    protected override async Task OnInitializedAsync()
    {
        var config = await CotizacionService.ObtenerConfiguracion();
        nombreNegocio = config.NombreLugar;
    }
}